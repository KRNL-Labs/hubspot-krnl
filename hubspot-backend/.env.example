# Development Settings
NODE_ENV=development
PORT=8000

# HubSpot Configuration
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here

# Blockchain Registration Configuration (REQUIRED for document registration)
# Ethereum RPC endpoint - Sepolia testnet recommended for development
RPC_SEPOLIA_URL=https://ethereum-sepolia-rpc.publicnode.com

# Smart contract address for AccessShield Document Registry
DOCUMENT_REGISTRY_CONTRACT=0x1234567890123456789012345678901234567890

# Private key of wallet that will send blockchain transactions
# WARNING: Never commit real private keys to version control
# Use a dedicated development wallet with minimal funds
EOA_PRIVATE_KEY=your-development-wallet-private-key-here

# Optional: Alternative variable names (fallback support)
# RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
# TARGET_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
# CLIENT_PRIVATE_KEY=your-development-wallet-private-key-here

# Supabase Configuration (REQUIRED for file storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Supabase S3-compatible Storage Configuration
SUPABASE_S3_ENDPOINT=https://your-project.supabase.co/storage/v1/s3
SUPABASE_S3_ACCESS_KEY_ID=your-supabase-access-key-id
SUPABASE_S3_SECRET_ACCESS_KEY=your-supabase-secret-access-key
SUPABASE_S3_REGION=us-east-1
SUPABASE_BUCKET=documents

# Database Configuration for file metadata
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# External Services (Optional - for additional integrations)
BLOCKCHAIN_API_URL=https://api.blockchain-service.com
BLOCKCHAIN_API_KEY=your_blockchain_key

# KRNL Workflow Configuration (REQUIRED for secure document viewing)
KRNL_NODE_URL=https://node.krnl.xyz
MOCK_KRNL=false
JWT_SECRET=your-jwt-secret-for-development
VIEWER_APP_URL=http://localhost:5173
SENDER_ADDRESS=your-sender-ethereum-address
ATTESTOR_ADDRESS=your-attestor-address
TARGET_CONTRACT_OWNER=your-contract-owner-address

# EIP-4337 Smart Account Configuration (REQUIRED for KRNL workflows)
FACTORY_ADDRESS=your-eip4337-factory-contract-address
APP_SECRET=your-app-secret-for-salt-generation
ENABLE_EIP4337_INIT=false